<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_supervisorio_ciclos_form_vapor" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.form.vapor</field>
        <field name="model">afr.supervisorio.ciclos</field>
       
        <field name="arch" type="xml">
             <form string="Ciclo">
                <header>
                    <button name="action_start" string="Iniciar" type="object" 
                        class="oe_highlight" attrs="{'invisible': [('state', '!=', 'aguardando')]}"/>
                    <button name="action_conclude" string="Concluir" type="object" 
                        class="oe_highlight" attrs="{'invisible': [('state', '!=', 'em_andamento')]}"/>
                    <button name="action_pause" string="Pausar" type="object" 
                        attrs="{'invisible': [('state', '!=', 'em_andamento')]}"/>
                    <button name="action_resume" string="Retomar" type="object" 
                        attrs="{'invisible': [('state', '!=', 'pausado')]}"/>
                    <button name="action_cancel" string="Cancelar" type="object" 
                        attrs="{'invisible': [('state', 'in', ['concluido', 'cancelado'])]}"/>
                    <button name="action_ler_diretorio_ciclos" string="Ler Diretório" type="object" 
                       />
                    <button name="compute_cycle_graph" string="Atualizar Grafico" type="object" 
                       />
                    <field name="state" widget="statusbar" 
                        statusbar_visible="aguardando,em_andamento,concluido,cancelado,erro,abortado,pausado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Código do Ciclo"/>
                        <h1>
                            <field name="name" placeholder="Número da Carga" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="batch_number" readonly="1"/>
                            <field name="equipment_id" readonly="1"/>
                            <field name="cycle_type_id" readonly="1" options="{'no_open': True}"/>
                            <field name="operator_id" readonly="1"/>
                            <field name="company_id" readonly="1" options="{'no_open': True}"/>
                        </group>
                        <group>
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                            <field name="duration_planned" widget="float_time" readonly="1"/>
                            <field name="is_overdue" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parâmetros do Processo">
                            <group>
                                <group string="Parâmetros da Câmara">
                                    <!-- <field name="vapor_temperature" string="Temperatura (°C)"/> -->
                                
                                </group>
                            </group>
                        </page>
                        <page string="Arquivos" name="files" attrs="{'invisible': [('file_path', '=', False)]}">
                            <group>
                                <field name="file_path" readonly="1"/>
                                <field name="cycle_txt" widget="ace" options="{
                                    'mode': 'plain_text',
                                    'theme': 'monokai',
                                    'fontSize': 14,
                                    'showPrintMargin': false,
                                    'showGutter': true,
                                    'maxLines': 40,
                                    'minLines': 10,
                                    'enableBasicAutocompletion': false,
                                    'enableLiveAutocompletion': false,
                                    'behavioursEnabled': false,
                                    'wrapBehavioursEnabled': false,
                                    'autoScrollEditorIntoView': true,
                                    'wrap': true
                                }" attrs="{'invisible': [('cycle_txt', '=', False)]}"/>
                                <field name="cycle_txt_filename" invisible="1"/>
                                <field name="cycle_pdf" filename="cycle_pdf_filename" widget="pdf_viewer"/>
                                <field name="cycle_pdf_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Gráfico do Ciclo" name="graph" attrs="{'invisible': [('cycle_graph', '=', False)]}">
                            
                                <field name="cycle_graph" filename="cycle_graph_filename" options='{"zoom": true}' widget="image" />
                                <field name="cycle_graph_filename" invisible="1"/>
                            
                        </page>
                        <page string="Observações">
                            <field name="notes" placeholder="Digite suas observações aqui..."/>
                        </page>
                </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>